{% extends 'base.html.twig' %}

{% block title %}Login!{% endblock %}

{% block body %}
<form method="post">

    {% if app.user %}
        <div class="mb-3 alert alert-info">
            You are logged in as {{ app.user.username }}, <a href="{{ path('app_logout') }}">Logout</a>
        </div>
    {% endif %}

    <h1 class="h3 my-5 mb-3 font-weight-normal text-center">Login</h1>

    <div class="d-flex flex-column align-items-center">
        {% if error %}
            <div class="w-50 alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
        {% endif %}
        <div class="w-50 form-floating mb-3">
            <input type="email" name="email" class="form-control {% if error %}is-invalid{% endif %}" id="inputEmail" value="{{ last_username }}" placeholder="name@example.com" required autofocus>
            <label for="inputEmail">Email</label>
        </div>

        <div class="w-50 form-floating">
            <input type="password" name="password" class="form-control {% if error %}is-invalid{% endif %}" id="inputPassword" placeholder="Password" required>
            <label for="inputPassword">Mot de passe</label>
        </div>
        <input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">
        <button class="btn btn-lg btn-primary mt-4" type="submit">
            Connectez
        </button>
    </div>

    {#
        Uncomment this section and add a remember_me option below your firewall to activate remember me functionality.
        See https://symfony.com/doc/current/security/remember_me.html

        <div class="form-check">
            <input class="form-check-input"  name="_remember_me" type="checkbox" id="autoSizingCheck">
            <label class="form-check-label" for="autoSizingCheck">
                Remember me
            </label>
        </div>

    #}

</form>
{% endblock %}
