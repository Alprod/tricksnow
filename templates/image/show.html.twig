{% extends 'base.html.twig' %}

{% block title %}Image{% endblock %}

{% block body %}
    <h1>Image</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Title</th>
                <td>{{ image.title }}</td>
            </tr>
            <tr>
                <th>Link</th>
                <td><img src="{{ image.link }}" alt="{{ image.title }}"> </td>
            </tr>
            <tr>
                <th>Created_at</th>
                <td>{{ image.createdAt ? image.createdAt|date('d/m/Y H:i:s') : '' }}</td>
            </tr>
            <tr>
                <th>Id</th>
                <td>{{ image.id }}</td>
            </tr>
        </tbody>
    </table>

    <a class="btn btn-success" href="{{ path('image_edit', {'id': image.id}) }}"><i class="bi bi-pencil-fill"></i></a>
    {{ include('image/_delete_form.html.twig') }}
    <a class="btn btn-info" href="{{ path('image_index') }}">back to list</a>


{% endblock %}
