{% extends 'base.html.twig' %}

{% block title %} {% endblock %}

{% block body %}
	<section class="">
		<h1></h1>
		<div class="row">
			<div class="col-12">
				<img class="img-fluid" src="{{ figure.images[0].link }}" alt="{{ figure.images[0].title }}" style="width: 90rem">
			</div>
			<div class="col-12 mt-4">
				<div class="row">
					<div class="col-md-12">
						<h6>images</h6>
						<a class="btn btn-warning" href="{{ path('image_new') }}">Ajouter une nouvelle image</a>
						<div class="d-flex flex-row">
							{% for image in figure.images %}
								<div class="mx-2">
									<img class="pt-2 img-fluid" src="{{ image.link }}" alt="{{ image.title }}" style="width: 12rem">
									<div class="mt-2">
										<a class="btn btn-outline-success" href="{{ path('image_edit', {'id': image.id}) }}"><i class="bi bi-pencil-fill"></i></a>
										{{ include('image/_delete_form.html.twig') }}
									</div>
								</div>
							{% endfor %}
						</div>
					</div>
					<div class="col-md-12 mt-3">
						<h6>vidéos</h6>
						<div class="d-flex flex-row">
							{% for video in figure.videos %}
								<div class="mx-2">
									<img class="pt-2" src="{{ video.link }}" alt="{{  video.title }}" style="width: 12rem">
									<div class="border p-1 mt-2">
										<a class="link-dark" href=""><i class="bi bi-pencil-fill p-1"></i></a>
										<a class="link-dark" href=""><i class="bi bi-trash-fill p-1"></i></a>
									</div>
								</div>
							{% endfor %}
						</div>
					</div>
				</div>
			</div>
			<div class="col-12 mt-4">
				{{ figure.description }}
			</div>
			<div class="col-12">
				<div class="row mt-4">
					<div class="col-3">Ecrit par {{ figure.author.firstname }} {{ figure.author.lastname }}</div>
					<div class="col-3">Créer le {{ figure.createdAt | date('d/m/Y') }}</div>
					<div class="col-3">Group de figure : {{ figure.figureGroup.title }}</div>
					<div class="col-3"></div>
				</div>
			</div>
			<div class="col-12"></div>
			<div class="col-12">
				{% for discussion in discussions %}
					<p>{{ dump(discussion.figures) }}</p>
				{% endfor %}
			</div>
		</div>
	</section>
{% endblock %}
